{
  "name": "@wavs/trust-graph-indexer",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "predev": "npm run ensure-env-local && npm run db:migrate",
    "ensure-env-local": "if ! test -f .env.local; then cp .env.example .env.local; fi",
    "dev": "ponder dev -p 65421",
    "start": "ponder start -p 65421",
    "db": "ponder db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "codegen": "ponder codegen",
    "serve": "ponder serve -p 65421",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@notionhq/client": "^5.3.0",
    "@ponder/client": "^0.15.16",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.5.0",
    "pg": "^8.16.3",
    "ponder": "^0.15.16",
    "viem": "^2.21.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.14"
  }
}
