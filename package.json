{
  "name": "@wavs/trust-graph",
  "version": "0.4.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "SYMLINK_TARGET=$(pwd)/node_modules/@morpho-org/universal-rewards-distributor/lib/openzeppelin-contracts bash -c 'mkdir -p $(dirname $SYMLINK_TARGET) && if ! test -e $SYMLINK_TARGET; then rm -f $SYMLINK_TARGET && ln -s $(pwd)/node_modules/@openzeppelin $SYMLINK_TARGET; fi'",
    "frontend": "pnpm --filter @wavs/trust-graph-frontend",
    "indexer": "pnpm --filter @wavs/trust-graph-indexer",
    "deploy:full": "tsx deploy/deploy-script.ts",
    "deploy:build-service": "tsx deploy/build-service.ts",
    "deploy:contracts": "tsx deploy/deploy-contracts.ts",
    "deploy:upload-components": "tsx deploy/upload-components.ts",
    "deploy:upload-service": "tsx deploy/upload-service.ts",
    "deploy:create-deployer": "tsx deploy/create-deployer.ts",
    "deploy:create-operator": "tsx deploy/create-operator.ts",
    "deploy:create-aggregator": "tsx deploy/create-aggregator.ts",
    "docker:log": "docker compose -f docker-compose.prod.yml logs -f -n 100",
    "docker:indexer:restart": "docker compose -f docker-compose.prod.yml up -d --force-recreate ponder ponder-server"
  },
  "dependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@ethereum-attestation-service/eas-contracts": "^1.8.0",
    "@gnosis-guild/zodiac-core": "^3.0.1",
    "@gnosis.pm/safe-contracts": "^1.3.0",
    "@lay3rlabs/poa-middleware": "github:lay3rlabs/poa-middleware#v1.0.0",
    "@morpho-org/universal-rewards-distributor": "github:lay3rlabs/universal-rewards-distributor#0de86bde8f949b35fdc61e533cc240fa541e27fe",
    "@noble/hashes": "^2.0.1",
    "@openzeppelin/contracts": "^5.2.0",
    "@openzeppelin/contracts-upgradeable": "^5.2.0",
    "@types/lodash": "^4.17.20",
    "@wavs/solidity": "0.5.0-beta.10",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "forge-std": "github:foundry-rs/forge-std#v1.9.6",
    "lodash": "^4.17.21",
    "tsx": "^4.20.6",
    "viem": "^2.39.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^3.0.0",
    "napa": "^3.0.0",
    "prettier": "^3.6.2",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
